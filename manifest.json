{
  "manifest_version": 3,
  "name": "List Picker",
  "version": "1.0",
  "description": "Replaces generic HTML select elements with searchable comboboxes.",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["indexer.js", "content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}
